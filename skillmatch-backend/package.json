{
  "name": "back-end",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "",
  "main": "app.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:migrate": "node --loader ts-node/esm ./src/migrations/migrate.ts",
    "db:seed": "node --loader ts-node/esm ./src/seeds/seed.ts",
    "prepare": "husky install",
    "docker:build": "docker build -t skillmatch-backend .",
    "docker:run": "docker run -p 3000:3000 skillmatch-backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.13",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
